<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="Change Password" class="action-bar">
	</ActionBar>
	<ScrollView>
		
		<StackLayout class="home-panel">
		
			<Label text="Name" class="heading" />
			<<TextField id="password" class="input" text="{{ currPass }}" hint="Current Password" secure="true" />
			<Label text="Surname" class="heading" />
			<TextField id="password" class="input" text="{{ newPass }}" hint="New Password" secure="true" />
			<Label text="Confirm Password" class="heading" />
			<TextField id="password" class="input" text="{{ newPassCon }}" hint="Confirm Password" secure="true" />
			<StackLayout orientation="vertical" width="210" height="210" backgroundColor="lightgray">
				<Button text="Update Password" tap="{{ updatePass }}" class="button" />
			</StackLayout>
		
		</StackLayout>

	</ScrollView>
</Page>

