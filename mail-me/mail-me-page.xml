<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
  
	<ActionBar title="Mail my diet">
		<NavigationButton text="Go Back" android.systemIcon="ic_menu_back" itemTap="onItemTap" name="myBackBut"></NavigationButton>
	</ActionBar>
  
	<ScrollView>
	<StackLayout class="MyStackLayout" >
	
		<StackLayout class="MyStackLayout">

			<Label text="Mail your personal meal plan" class="myLabel"/>
	
			<StackLayout class="input-field">
				<TextField class="input" text="{{ email }}" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none"
				/>
				<Label class="hr-light" />
			</StackLayout>
	
			<StackLayout class="input-field">
				<TextField  hint="Side note" />
				<Label class="hr-light" />
			</StackLayout>			
	
			<Button  class="sendMe"/>
			
		</StackLayout>
	
		

	</StackLayout>
	</ScrollView>
</Page>